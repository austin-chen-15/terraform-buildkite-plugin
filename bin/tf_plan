#!/bin/bash

RED='\033[0;31m'
ORANGE='\033[0;33m'
GREEN='\033[0;32m'
NC='\033[0m'

set -e -o pipefail

echo -e "#################### TERRAFORM INIT ####################"
terraform init -input=false
echo -e "#################### TERRAFORM PLAN ####################"
terraform plan -input=false -out=tfplan

echo -e "#################### OPA POLICY CHECK ####################"

terraform show -json tfplan > tfplan.json
pwd
OPA_RESULT=`opa eval --format pretty --data opa-policy/terraform.rego --input tfplan.json "data.terraform.analysis.tag_enforcement"`
if [[ $OPA_RESULT == "true" ]]; then
  echo "$GREEN OPA check succeeded! $NC"
else
  echo "$RED OPA check failed! $NC"
  exit 1
fi

tar -czf plan-artifacts.tar.gz $(git ls-files --others .)

ls -al

buildkite-agent artifact upload plan-artifacts.tar.gz


